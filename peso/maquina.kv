<Px>:
    Label:
        text: "\n\nLa parada seleccionada\nesta en uso"
        size_hint: 0.6, 0.2
        pos_hint: {"x":0.2, "top":1}
    Button:
        text: "Continuar trabajando"
        size_hint: 0.8, 0.2
        pos_hint: {"x":0.1, "y":0.1}
        on_release: app.root.current = "rollo"
        #on_press: root.envio()

